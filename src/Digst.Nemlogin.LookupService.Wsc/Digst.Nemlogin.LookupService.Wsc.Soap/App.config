<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="oioIdwsWcfConfiguration" type="Digst.OioIdws.Wsc.OioWsTrust.Configuration, Digst.OioIdws.Wsc, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
    <section name="oioIdwsLoggingConfiguration" type="Digst.OioIdws.Common.Logging.Configuration, Digst.OioIdws.Common, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null" />
  </configSections>
  
  <!-- SOAP CONFIG START -->
  <oioIdwsWcfConfiguration debugMode="true" stsEndpointAddress="https://securetokenservice.#{Domain}/SecurityTokenService.svc" tokenLifeTimeInMinutes="120" wspEndpointID="https://saml.wsp.lookupservice.#{Domain}">
    <clientCertificate findValue="4022E6E11BFD585EA751B010BBE70DEA49F7F30A" storeLocation="CurrentUser" storeName="My" x509FindType="FindByThumbprint" />
    <stsCertificate findValue="3E2EDA0575350918865C973774475D5D3E28B3DA" storeLocation="CurrentUser" storeName="My" x509FindType="FindByThumbprint" />
  </oioIdwsWcfConfiguration>
  <startup>
    <supportedRuntime sku=".NETFramework,Version=v4.7.2" version="v4.0" />
  </startup>
  <system.serviceModel>
    <diagnostics>
      <messageLogging logKnownPii="true" logEntireMessage="true" logMalformedMessages="true" logMessagesAtServiceLevel="true" logMessagesAtTransportLevel="true" />
    </diagnostics>
    <extensions>
      <bindingExtensions>
        <add name="SoapBinding" type="Digst.OioIdws.Soap.Bindings.SoapBindingCollectionElement, Digst.OioIdws.Soap" />
      </bindingExtensions>
      <behaviorExtensions>
        <add name="SoapBehavior"
					 type="Digst.OioIdws.Soap.Behaviors.SoapClientBehaviorExtensionElement, Digst.OioIdws.Soap" />
      </behaviorExtensions>
    </extensions>
    <behaviors>
      <endpointBehaviors>
        <behavior name="SoapBehaviourConfiguration">
          <clientCredentials>
            <serviceCertificate>
              <scopedCertificates>
                <add findValue="79fd03dae9a28000873bda8d77b1d06dae44f984" storeLocation="CurrentUser" storeName="My" targetUri="#{BaseUrl}/LookupService.svc" x509FindType="FindByThumbprint" />
              </scopedCertificates>
            </serviceCertificate>
          </clientCredentials>
          <!--Endpoints can only point to a single behaviour configuration. Hence, we need to include the SoapBehavior in a existing behavior-->
          <SoapBehavior />
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <bindings>
      <SoapBinding>
        <binding name="SoapBindingConfiguration" useHttps="true" />
      </SoapBinding>
    </bindings>
    <client>
      <endpoint address="#{BaseUrl}/LookupService.svc"
			  behaviorConfiguration="SoapBehaviourConfiguration" binding="SoapBinding"
        bindingConfiguration="SoapBindingConfiguration" contract="Lookup.LookupService"
			  name="config_ILookupService">
        <identity>
          <dns value="EIA.Frontend (funktionscertifikat)" />
        </identity>
      </endpoint>
    </client>
  </system.serviceModel>
  <!-- SOAP CONFIG END -->

</configuration>